        },
        {
          "name": "whatIsUX",
          "label": "What is user experience to you?",
          "type": "textarea",
          "resize": false,
          "rows": 5
        },
        {
          "name": "memberDepartments",
          "label": "What department/s are you interested in?",
          "type": "checkbox",
          "options": [
            "Design",
            "Development",
            "Management",
            "Marketing",
            "Research"
          ]
        }
      ]
    }
  }
]
